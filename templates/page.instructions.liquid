      <div class="wrapper">
        <h2 class="mt0 mb30">BaseCamp</h2>

        <div class="grid__item large--one-half">
          <iframe width="560" height="315" src="//www.youtube.com/embed/CQUNH_GGMk0" frameborder="0" allowfullscreen></iframe> 
          
          <div class="clearfix"></div>

          <footer class="footer-actions">
              <a href="https://cdn.shopify.com/s/files/1/0666/9741/files/BaseCamp_instructionBooklet_reader.pdf?15254358528177372558" target="_blank" aria-label="Opens PDF in a new tab" rel="noopener" class="btn btn-primary" title="Download Manual">Download Manual</a>
        
          </footer>
        </div>

      </div>
      
    </div>
    
    
    
    <a name="campstove"></a>

    <div id="" class="grid instruction-grid" style="background-image: url('https://cdn.shopify.com/s/files/1/0666/9741/files/CampStove_IM.jpg?17956431688481276127');">
      <div class="wrapper">
        <h2 class="mt0 mb30">CampStove</h2>

        <div class="grid__item large--one-half">
          <iframe width="560" height="315" src="//www.youtube.com/embed/5Nvb96v_3fQ" frameborder="0" allowfullscreen></iframe>
          
          <div class="clearfix"></div>

          <footer class="footer-actions">
              <a href="https://cdn.shopify.com/s/files/1/0666/9741/files/BioLiteCampStove_IM.pdf?4934072770189429368" target="_blank" aria-label="Opens PDF in a new tab" rel="noopener" class="btn btn-primary" title="Download Manual">Download Manual</a>
        
          </footer>
        </div>

      </div>
      
    </div>
    
