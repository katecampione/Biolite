{% assign images = product.metafields.images.orange | split: ',' %}
<!-- HERO HOME -->
<section id="slider" class="hero hero--carousel show">
  <div class="hero__viewport hero-carousel">
    <ul class="slides">
      {% for image in images %}
      <li>
        <img src="{{image}}" alt="" />
      </li>
      {% endfor %}
    </ul>
  </div>
</section>
