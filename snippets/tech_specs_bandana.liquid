<div class="mobile-wrapper closed">
 <h2 class="mobile-title">Specs</h2>
 <section id="product-specs" class="mobile-wrapper-content product-specs section product-specs--{{ product.handle | remove: 'biolite-' }}">
   <div class="wrapper">
     <div id="product-specs-new" class="wrapper wrapper--large wrapper--max_height">
         <div class="large--one-third grid__item">
            <div class="row-medium">
              <div class="spec-title">Size</div>
              <div class="spec-desc light"><span>22 x 22 in (56 x 56 cm)  </span></div>
            </div>
       </div>
       
       <div class="large--one-third grid__item">
            <div class="row-medium">
              <div class="spec-title">Material</div>
              <div class="spec-desc light"><span>100% Cotton </span></div>
            </div>
       </div>
       
       <div class="large--one-third grid__item">
          <div class="row-medium">
              <div class="spec-title">Printing</div>
              <div class="spec-desc light"><span>1 color white, printed with eco-friendly waterbased inks</span></div>
            </div>
          
       
       </div>
    
     </div>
   </div>
 </section>
</div>

