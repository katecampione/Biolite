<div class="subscribe_form_container">
	<form class="input-inline m0" data-unique-modal-name="{{ unique_modal_name }}">
	  <div class="input-icon input-inline__input">
	    <label for="email" class="fa fa-envelope-o"></label>
	    <input type="email" id="email" name="email" required class="" placeholder="Enter Email">
	  </div>
	  <button type="submit" class="input-inline__submit btn btn-primary">Join</button>
	</form>
	<div class="modal subscribe_modal" id="{{ unique_modal_name }}">
		<header class="modal__header">
		  <div class="modal__title">Success!</div>
		  <div class="modal--close">
		    <i class="fa fa-circle-border fa-circle-border--medium fa-times"></i>
		  </div>
		</header>
		<section class="section-small modal__content" id="content">
			<div class="wrapper">
				<H4>You're now in the loop!</H4>
			</div>
		</section>
	</div>
</div>

